<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ambulancefinder.customerui.SettingsFragment"
    android:orientation="vertical"
    android:padding="20sp">

    <ImageView
        android:id="@+id/profileImage_vol"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:src="@mipmap/ic_default_user" />
    <EditText
        android:id="@+id/name_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Name"
        android:layout_marginBottom="20sp"/>
    <EditText
        android:id="@+id/phone_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Phone"
        android:layout_marginBottom="20sp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/contact_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Another Contact"
        android:layout_marginBottom="20sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/aadhar_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Aadhar Number"
        android:layout_marginBottom="20sp"/>
    <EditText
        android:id="@+id/car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Car Name"
        android:layout_marginBottom="20sp"/>
    <EditText
        android:id="@+id/car_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Car Number"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/aadhar_copy"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Aadhar Copy Upload"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_aadhar"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:text="Upload"
        android:background="@drawable/rectbackground"/>
    <TextView
        android:id="@+id/license_copy"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="License Copy Upload"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_license"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:text="Upload"
        android:background="@drawable/rectbackground"/>

    <TextView
        android:id="@+id/car_copy"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:text="Car Documents Copy Upload"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_car"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:text="Upload"
        android:background="@drawable/rectbackground"/>


    <Button
        android:id="@+id/confirm_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="confirm"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/back_vol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedbutton"
        android:text="back"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>